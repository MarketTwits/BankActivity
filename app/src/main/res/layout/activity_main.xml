<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/red_rose"
        android:text="@string/bank_title"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/lightBlack"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="19dp"
        android:fontFamily="@font/red_rose"
        android:text="Добрый день, Ольга !"
        android:textAllCaps="false"

        android:textColor="#4D4242"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewUser"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_2022_04_27_19_07_21"
        android:onClick="onBrowserActivity"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="63dp"
        android:text="@string/writePassToContinue"
        android:textColor="#4D4242"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="390dp"
        android:layout_height="346dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:scrollbarDefaultDelayBeforeFade="65"
                android:text="1
"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="28sp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="28sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btClose"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:backgroundTint="@color/sharpBlue"
                android:fontFamily="@font/red_rose"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt0"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="93dp"
                android:background="@drawable/button"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/red_rose"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btOK"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:backgroundTint="@color/sharpBlue"
                android:fontFamily="@font/red_rose"
                android:padding="5dp"
                android:text="0K"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:onClick="onClickActivity"/>


        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>